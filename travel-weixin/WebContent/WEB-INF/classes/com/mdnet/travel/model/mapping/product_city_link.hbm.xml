<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- 指定Hibernate映射文件的DTD信息 Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.mdnet.travel.core.model">
	<class name="ProductCityLink" table="product_city_link">
		<!-- 映射标识属性 -->
		<id column="id" name="id">
			<!-- 指定使用identity主键生成策略 -->
			<generator class="identity" />
		</id>

		<property generated="never" lazy="false" name="cityId"
			type="int">
			<column name="city_id" index="INX_PRODUCT_CITY" length="32" not-null="false">
				<comment>城市id</comment>
			</column>
		</property>
		<property generated="never" lazy="false" name="productId"
			type="int">
			<column name="product_id" index="INX_CITY_PRODUCT" length="32" not-null="false">
				<comment>产品ID</comment>
			</column>
		</property>
		
	</class>
</hibernate-mapping>
