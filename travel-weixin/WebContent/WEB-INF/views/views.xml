<!DOCTYPE tiles-definitions PUBLIC
      "-//Apache Software Foundation//DTD client Configuration 2.1//EN"
      "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<definition name="admin_template" template="/WEB-INF/views/admin_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/public/top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/public/footer.jsp" />
	</definition>
	 
	<definition name="super_template" template="/WEB-INF/views/super_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/super/top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/public/footer.jsp" />
	</definition>
	
	<definition name="nothing_template" template="/WEB-INF/views/nothing_template.jsp">
	</definition>
	
	<definition name="custom_template" template="/WEB-INF/views/custom_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/custom/top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/custom/footer.jsp" />
	</definition>
	
	<definition name="mobile_custom_template" template="/WEB-INF/views/custom_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/custom/mobile_top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/custom/mobile_footer.jsp" />
	</definition>
	
	<definition name="drive_template" template="/WEB-INF/views/custom_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/drive/top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/drive/footer.jsp" />
	</definition>
	
	<definition name="lead_template" template="/WEB-INF/views/custom_template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/leader/top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/leader/footer.jsp" />
	</definition>
	
	<definition name="client_template" template="/WEB-INF/views/client_template.jsp">
		<put-attribute name="head" value="/WEB-INF/views/client/head.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/public/footer.jsp" />
	</definition>

	<definition name="login" extends="custom_template">
		<put-attribute name="content" value="/WEB-INF/views/login.jsp" />
	</definition>
	
	<definition name="sitemap" extends="nothing_template">
		<put-attribute name="content" value="/WEB-INF/views/public/sitemap.jsp" />
	</definition>

	<definition name="signup" extends="client_template">
		<put-attribute name="content" value="/WEB-INF/views/signup.jsp" />
	</definition>
	<definition name="home" extends="client_template">
		<put-attribute name="content" value="/WEB-INF/views/client/home.jsp" />
	</definition>
	<definition name="404_or_500" extends="client_template">
		<put-attribute name="content" value="/WEB-INF/views/404_or_500.jsp" />
	</definition>
	
	<definition name="show_template" template="/WEB-INF/views/show_template.jsp">
	</definition>
</tiles-definitions>
